<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.solovgeo.presentation.CurrencyListActivity">

    <TextView
        android:id="@+id/tv_activity_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing72"
        android:layout_marginTop="@dimen/spacing16"
        android:layout_marginBottom="@dimen/spacing16"
        android:fontFamily="sans-serif-medium"
        android:text="Hello World!"
        android:textColor="@color/black"
        android:textSize="@dimen/font20" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_activity_main_currency_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_currency_list" />

</LinearLayout>